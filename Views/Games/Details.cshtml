@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-light rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-light fw-bold">@Model.Name</h1>
                    <span class="badge bg-info fs-5 mb-4">@Model.Category?.Name</span>
                    <p class="fs-5">@Model.Descriptipn</p>
                </div>
                <div>
                    @foreach (var device in Model.Devices)
                    {
                        <i class="@device.Device.Icon me-2 fs-1 text-light"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="Model.Name" class="w-100" />
            </div>
        </div>
    </div>
</div>